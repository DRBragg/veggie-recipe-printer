<!DOCTYPE html>
<html>
<head>
	<title>Veggie Recipe Printer</title>
</head>
<body>
<h1><%= @name %></h1>
<hr>
<h3>Ingredients:</h3>
<ul>
	<% @ingredients.each do |ingredient| %>
		<li><%= ingredient %></li>
	<% end %>
</ul>
<hr>
<h3>Directions:</h3>
<ol>
	<% @directions.each do |step| %>
		<li><%= step %></li>
	<% end %>
</ol>
<hr>
<h3>See what others are saying:</h3>
<% @reviews.each do |review| %>
	<div style="border: 1px solid black; padding: 2px; margin-bottom: 4px; width: 30%">
	<p><b>Username:</b> <%=review[:username] %></p>
	<p><b>Rating:</b> <%=review[:rating] %></p>
	<p><b>Review:</b> <%=review[:review] %></p>
	</div>
<% end %>
</body>
</html>